<%= form_tag sessions_path do %>
  <div class="field">
    <%=label_tag :userhandle %></br>
    <%= text_field_tag :userhandle, params[:userhandle] %>
  </div>
  <div class="field">
    <%=label_tag :password %></br>
    <%= password_field_tag :password, params[:password] %>
  </div>
  <div class="actions"><%= submit_tag "Log In" %></div>
<% end %>
